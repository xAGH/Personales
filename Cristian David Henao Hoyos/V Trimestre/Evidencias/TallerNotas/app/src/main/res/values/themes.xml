<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TallerNotas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_l</item>
        <item name="colorPrimaryVariant">@color/primaryVariant_l</item>
        <item name="colorOnPrimary">@color/onPrimary_l</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_l</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant_l</item>
        <item name="colorOnSecondary">@color/onSecondary_l</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_l</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="cardBackgroundColor">@color/cardBackground_l</item>
    </style>
</resources>